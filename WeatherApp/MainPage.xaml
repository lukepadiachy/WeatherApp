<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Frame CornerRadius="10" Margin="20" BackgroundColor="Black" Padding="0">
                <Label
                        Text="Weather App"
                        Style="{StaticResource Headline}"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="40"/>
            </Frame>
            <Frame CornerRadius="10" Margin="20" BackgroundColor="Black" Padding="-1">
                <Image
                    Source="weather.jpg"
                    HeightRequest="300"
                    WidthRequest="300"
                    Aspect="AspectFill"/>
            </Frame>
            <Label
                    Text=" Temperature "
                    Style="{StaticResource SubHeadline}"
                    FontAttributes="Italic"
/>
            <Label
                    Text="{Binding LatestTemp}"
                    Style="{StaticResource SubHeadline}"
                    FontAttributes="Italic"
            />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
